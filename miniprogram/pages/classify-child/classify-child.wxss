.classify-child {
  width: 100%;
}

.classify-type, .classify-major {
  position: fixed;
  left: 0;
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 24rpx;
  background: #fff;
  box-sizing: border-box;
  border-bottom: 2rpx solid rgb(228, 224, 224);
  color: rgb(216, 210, 210);
}

.classify-child .classify-type {
  top: 0;
}

.classify-child .classify-major {
  top: 70rpx;
  flex-flow: wrap;
}

.type-item, .major-item {
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  height: 70rpx;
}

.check-item, .check-all, .check-items {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid red;
  color: red;
  box-sizing: border-box;
  border-radius: 40rpx;
}

.classify-child .check-item {
  width: 76%;
  height: 64%;
}

.classify-child  .check-all {
  position: absolute;
  left: 11rpx;
  top: 15rpx;
  width: 58%;
  height: 68%;
}

.classify-child .check-items {
  width: 82%;
  height: 68%;
}

.classify-child .type-item {
  width: 15%;
  height: 70rpx;
}

.classify-child .major-item {
  position: relative;
  width: 20%;
  height: 70rpx;
}

.classify-child .classify-book {
  margin-top: 70rpx;
  width: 100%;
  padding-top: 20rpx;
  box-sizing: border-box;
}

.classify-child .second-tab {
  margin-top: 140rpx;
}

.classify-child .second-tabs {
  margin-top: 210rpx;
}

.classify-child  .classify-item {
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}

.book-img, .book-info {
  height: 100%;
}

.classify-child .book-img {
  width: 19%;
  background: gainsboro;
  border-radius: 10rpx;
  overflow: hidden;
}

.classify-child .book-info {
  width: 77%;
  display: flex;
  flex-flow: wrap;
  padding: 10rpx;
  box-sizing: border-box;
}

.classify-child .book-info view {
  width: 100%;
}

.classify-child .book-name {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 15rpx;
}

.classify-child .book-introduction {
  font-size: 24rpx;
  color: rgb(177, 168, 168);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.classify-child .book-keep {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: rgb(177, 168, 168);
}

.classify-child .book-num {
  color: red;
}
